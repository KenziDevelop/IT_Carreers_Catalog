<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingHorizontal="32dp">

    <!-- Lock Icon Ungu (besar di tengah atas) -->
    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_lock_purple"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Back! ðŸ˜Š -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back! ðŸ˜Š"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/iv_lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to continue your journey"
        android:textSize="16sp"
        android:textColor="#64748B"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Field (box abu-abu rounded) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_edittext"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#64748B"
            android:textColor="#1E293B"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Password Field (box abu-abu rounded) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/password_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_edittext"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/email_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_lock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/key"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#64748B"
            android:textColor="#1E293B"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/icon_lock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Toggle password (opsional, kalau mau pakai icon mata) -->
        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lupa Password? -->
    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password?"
        android:textColor="#6366F1"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/password_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sign In Button (gradient biru-ungu) -->
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Sign In â†’"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/gradient_signin"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OR Divider -->
    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="#94A3B8"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E2E8F0"
        app:layout_constraintTop_toTopOf="@id/or_text"
        app:layout_constraintBottom_toBottomOf="@id/or_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/or_text" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E2E8F0"
        app:layout_constraintTop_toTopOf="@id/or_text"
        app:layout_constraintBottom_toBottomOf="@id/or_text"
        app:layout_constraintStart_toEndOf="@id/or_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Social Buttons (Google & Facebook) -->
    <LinearLayout
        android:id="@+id/linear_social"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="0dp"
        app:layout_constraintTop_toBottomOf="@id/or_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Google Button -->
        <ImageView
            android:id="@+id/icon_google"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_google"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Google"
            android:textColor="#1E293B"
            android:textSize="16sp"
            android:background="@android:color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:drawableStart="@drawable/google"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="12dp" />

        <!-- Facebook Button -->
        <ImageView
            android:id="@+id/icon_facebook"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Facebook"
            android:textColor="#1E293B"
            android:textSize="16sp"
            android:background="@android:color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:drawableStart="@drawable/facebook"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- Sign Up Link -->
    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak punya akun? Sign Up"
        android:textSize="16sp"
        android:textColor="#64748B"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/linear_social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>