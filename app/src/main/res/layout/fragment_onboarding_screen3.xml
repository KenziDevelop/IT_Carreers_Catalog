<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Skip Button (kanan atas) -->
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip >"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#6366F1"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gambar Utama -->
    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_screen3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Icon Growth Orange (panah up + chart) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="#FB923C"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-40dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_growth_orange"
        android:layout_gravity="center"
        android:tint="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lacak Kemajuan Anda"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/card_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan favorit, lacak kemajuan belajar, dan raih tujuan karier Anda."
        android:textSize="16sp"
        android:textColor="#64748B"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Next Button (di screen terakhir bisa diganti jadi "Get Started >" nanti via code) -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Next >"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#6366F1"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>