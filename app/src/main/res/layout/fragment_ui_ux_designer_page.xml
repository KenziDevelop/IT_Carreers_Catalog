<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Deskripsi singkat -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="UI/UX Designer merancang antarmuka pengguna yang intuitif, estetis, dan user-friendly, serta memastikan pengalaman pengguna optimal melalui riset, wireframing, prototyping, dan testing."
            android:textSize="16sp"
            android:textColor="#1E293B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tag Durasi & Demand -->
        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_demand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demand: Tinggi"
                android:background="@drawable/tag_pink"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaji: Rp6jt - Rp15jt+"
                android:background="@drawable/tag_purple"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar: 4-12 bulan"
                android:background="@drawable/tag_orange"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Section Title -->
        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This Career"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/ll_tags"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Isi section (akan diisi berbeda per halaman) -->
        <LinearLayout
            android:id="@+id/container_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_section_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tombol Mark as Complete -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Mark as Complete"
            android:textColor="@android:color/white"
            android:backgroundTint="#F472B6"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/container_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>